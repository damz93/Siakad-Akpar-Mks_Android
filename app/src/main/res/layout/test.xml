<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bground"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="5"
    android:scrollbars="vertical" >

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="416dp"
             android:columnCount="1"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/btn_mtkul2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/btn_mhs2"
        android:layout_below="@+id/btn_mhs2"
        android:layout_marginTop="25dp"
        android:background="@drawable/matakuliah"
        android:text="Mata Kuliah"
        android:textColor="#ff2424"
        android:textColorHint="#FFFFFF"
        android:textSize="30px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_mhs2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/btn_info2"
        android:background="@drawable/mhs"
        android:text="Biodata Diri Mahasiswa"
        android:textColor="#ff2424"
        android:textColorHint="#FFFFFF"
        android:textSize="30px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_tskp2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/btn_mtkul2"
        android:layout_below="@+id/btn_mtkul2"
        android:layout_marginTop="25dp"
        android:background="@drawable/transkrip"
        android:text="Transkrip"
        android:textColor="#ff2424"
        android:textColorHint="#FFFFFF"
        android:textSize="30px"
        android:textStyle="bold" />

<Button
    android:id="@+id/btn_krs2"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_alignLeft="@+id/btn_khs2"
    android:layout_below="@+id/btn_khs2"
    android:layout_marginTop="25dp"
    android:background="@drawable/kartu"
    android:text="KRS/Kelas"
    android:textColor="#ff2424"
    android:textColorHint="#FFFFFF"
    android:textSize="30px"
    android:textStyle="bold" />

<Button
    android:id="@+id/btn_dosn2"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_above="@+id/btn_tskp2"
    android:layout_marginTop="25dp"
    android:layout_toLeftOf="@+id/btn_mhs2"
    android:background="@drawable/dosen"
    android:text="Daftar Dosen"
    android:textColor="#ff2424"
    android:textColorHint="#FFFFFF"
    android:textSize="30px"
    android:textStyle="bold" />

<Button
    android:id="@+id/btn_khs2"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_alignTop="@+id/btn_tskp2"
    android:layout_toLeftOf="@+id/btn_mhs2"
    android:background="@drawable/krs"
    android:text="Kartu Hasil Study"
    android:textColor="#ff2424"
    android:textColorHint="#FFFFFF"
    android:textSize="30px"
    android:textStyle="bold" />

<Button
    android:id="@+id/btn_info2"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_alignBaseline="@+id/btn_mhs2"
    android:layout_alignBottom="@+id/btn_mhs2"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="30dp"
    android:background="@drawable/info"
    android:text="Informasi Kampus"
    android:textColor="#ff2424"
    android:textColorHint="#123"
    android:textSize="30px"
    android:textStyle="bold" />

</RelativeLayout>

</ScrollView>



 <Button
     android:id="@+id/btn_lgin"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     
     android:layout_marginTop="35dp"
     android:background="@drawable/btn_hijau"
     android:gravity="center_vertical"
     android:text="Login"
     android:textColor="#FFFFFF"
     android:textSize="40px" />

 <TextView
     android:id="@+id/txt_slmat"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_below="@+id/btn_lgin"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="14dp"
     android:text="Selamat Datang . . ."
     android:textAppearance="?android:attr/textAppearanceMedium"
     android:textColor="#FFFFFF"
     android:textSize="16dp" />

</LinearLayout>